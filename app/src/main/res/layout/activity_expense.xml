<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Budget Warning -->
            <TextView
                android:id="@+id/budgetWarningTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This expense exceeds your budget!"
                android:background="#FFEBEE"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:autofillHints="amount" />

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Description"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:autofillHints="description" />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Date (yyyy-MM-dd)"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:autofillHints="expenseDate"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:inputType="none" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#FFFFFF" />

            <!-- Image Upload -->
            <Button
                android:id="@+id/uploadImageBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Upload Image (optional)"
                android:backgroundTint="#43A047"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:background="#616161"
                android:contentDescription="Selected image preview" />

            <!-- Save Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/saveExpenseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Save Expense"
                    android:backgroundTint="#43A047"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Expenses List -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <ListView
                android:id="@+id/expensesListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:divider="#757575"
                android:dividerHeight="1dp"
                android:background="#424242" />

            <!-- Category Totals -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Totals"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/categoryTotalsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:background="#FFFFFF"
                android:elevation="1dp" />

            <!-- Date Filters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/startDateEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Start Date"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    android:autofillHints="filterStartDate"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/endDateEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="End Date"
                    android:background="#FFFFFF"
                    android:autofillHints="filterEndDate"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:inputType="none" />
            </LinearLayout>

            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/filterDateButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Filter"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#43A047"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/clearFilterButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:backgroundTint="#BDBDBD"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:itemIconTint="@color/green"
        app:itemTextColor="@color/green"
        app:menu="@menu/bottom_nav" />

</LinearLayout>
